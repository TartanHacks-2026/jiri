# ============================================
# Jiri Backend Environment Configuration
# ============================================

# --- Database (TimescaleDB) ---
POSTGRES_USER=jiri
POSTGRES_PASSWORD=jiri_dev_password
POSTGRES_DB=jiri
TIMESCALE_PORT=5432

# For local development (connecting to Docker)
DATABASE_URL=postgresql+asyncpg://jiri:jiri_dev_password@localhost:5432/jiri

# --- Redis ---
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# --- ChromaDB ---
CHROMA_PORT=8001
CHROMA_HOST=localhost

# --- FastAPI App ---
APP_PORT=8000
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# --- API Security ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=CHANGE_ME_IN_PRODUCTION

# --- Azure Voice Live (Placeholder) ---
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus2

# --- OpenAI / LLM ---
OPENAI_API_KEY=your_openai_key_here
